<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Universum.NewPiecePage"
             Title="New Piece">
    
    <VerticalStackLayout>

        <Entry
            Placeholder="Piece Name*"
            x:Name="NameEtr"
            Completed="NameEtr_Completed" />

        <Entry
            Placeholder="Authors"
            x:Name="AuthorsEtr"
            Completed="AuthorsEtr_Completed" />

        <Button
            Text="Book"
            x:Name="PieceTypeBtn"
            Clicked="PieceTypeBtn_Clicked"
            />

        <DatePicker 
            Format="yyyy" />
        
        <Entry 
            Placeholder="Description"
            x:Name="DescriptionEtr"
            Completed="DescriptionEtr_Completed" />

        <Entry
            Placeholder="Image Url"
            x:Name="ImageEtr"
            Completed="ImageEtr_Completed" />

        <Button
            Text="Enter"
            Clicked="EnterBtn_Clicked" />

    </VerticalStackLayout>

</ContentPage>